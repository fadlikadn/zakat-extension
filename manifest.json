{
  "manifest_version": 3,
  "name": "Zakat Extension Easy",
  "description": "Permudah Hitung Zakat",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "http://developer.chrome.com/docs/extensions/*",
        "http://developer.chrome.com/docs/webstore/*"
      ]
    }
  ]
}